rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper funkce
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isUnder10MB() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Helper funkce pro kontrolu admin role
    function isAdmin() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- NOVÁ LOGICKÁ STRUKTURA (Entity-Centric) ---

    // Audity - uložené pod audits/{auditId}/
    match /audits/{auditId}/{allPaths=**} {
      allow read: if isAuthenticated();
      // Umožnit nahrávání a mazání fotek všem auditorům
      allow write: if isAuthenticated();
    }

    // Reporty - uložené pod reports/
    match /reports/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }

    // Dodavatelé (loga, razítka) - uložené pod suppliers/{supplierId}/
    match /suppliers/{supplierId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // --- GLOBÁLNÍ A POMOCNÉ ---

    // Vlastní ikony vygenerované AI
    match /custom-icons/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Razítko auditora - globální
    match /auditor/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isAdmin() && isImage() && isUnder10MB();
    }

    // --- STARÁ STRUKTURA (Legacy - User Scoped) ---
    // Ponecháno pro zpětnou kompatibilitu a přístup k existujícím souborům
    
    match /users/{userId}/audits/{auditId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
    
    match /users/{userId}/reports/{reportId}/{allPaths=**} {
      allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
    
    match /users/{userId}/suppliers/{supplierId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
  }
}
